<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- this is main linear -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <!--this is upper header  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/homeBtn"
                android:src="@drawable/homeicon"
                android:layout_marginLeft="0dp"
                android:layout_height="50dp"></ImageView>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="40dp"
                android:id="@+id/Call"
                android:src="@drawable/callicon"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"></com.airbnb.lottie.LottieAnimationView>
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/Website"
                android:src="@drawable/websiteicon"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/Location"
                android:src="@drawable/locationicon"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/FaceBook"
                android:src="@drawable/facebookicon"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"></ImageView>
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/Instagram"
                android:src="@drawable/instagramicon"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"></ImageView>
        </LinearLayout>
        <!-- this is banner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_height="200dp">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:id="@+id/viewpager"
                android:layout_height="200dp"></androidx.viewpager.widget.ViewPager>
        </androidx.cardview.widget.CardView>


        <!-- this is below banner layout  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <!-- this is activity -->
            <TextView
                android:layout_width="match_parent"
                android:text="Activity's"
                android:textAllCaps="true"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:typeface="sans"
                android:layout_height="wrap_content"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/colorPrimaryFadded"
                app:cardCornerRadius="12dp"
                app:contentPadding="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/recyclerView"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
                    </HorizontalScrollView>


            </androidx.cardview.widget.CardView>

            <!-- this is school/Ngo -->
            <TextView
                android:layout_width="match_parent"
                android:text="School / NGO"
                android:textAllCaps="true"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:layout_height="wrap_content"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/colorPrimaryFadded"
                app:cardCornerRadius="12dp"
                app:contentPadding="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:id="@+id/recyclerView1"
                                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </HorizontalScrollView>


            </androidx.cardview.widget.CardView>

            <!-- this is Achivments -->
            <TextView
                android:layout_width="match_parent"
                android:text="Achievements"
                android:layout_margin="10dp"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:layout_height="wrap_content"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/colorPrimaryFadded"
                app:cardCornerRadius="12dp"
                app:contentPadding="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/recyclerView2"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </HorizontalScrollView>

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:id="@+id/logo1"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/donatebook"></ImageView>
            <!-- this is more activity -->
            <TextView
                android:layout_width="match_parent"
                android:text="Under Development"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>

