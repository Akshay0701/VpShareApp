<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Commander_id"
                android:id="@+id/commander_id"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barcode_id"
                android:layout_marginBottom="10dp"
                android:id="@+id/barcode_id"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"></TextView>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_name"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="Email"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_email"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="Password"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_password"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="Phone No"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_PhoneNo"
                android:layout_height="wrap_content"></EditText>

            <EditText
                android:id="@+id/user_login_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Address.."
                android:textColor="@color/colorPrimaryDark"></EditText>
            <EditText
                android:id="@+id/user_login_Area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Area.."
                android:textColor="@color/colorPrimaryDark"></EditText>

            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="City"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_city"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="India"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_Country"
                android:layout_height="wrap_content"></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Donated Stuff:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold"
                ></TextView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBox_book"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <CheckBox
                    android:id="@+id/checkBox_pencil"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pencil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <CheckBox
                    android:id="@+id/checkBox_Markers"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Markers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <CheckBox
                    android:id="@+id/checkBox_Pencil_sharpener"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"
                    android:text="Sharpener"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox_other"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:text="others"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/user_login_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="SignUp"
                android:textColor="@color/colorAccent">

            </Button>
            <TextView
                android:layout_width="match_parent"
                android:text="Are You Already Register.."
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="2dp"
                android:padding="3dp"
                android:layout_height="wrap_content"></TextView>
            <Button
                android:id="@+id/user_login_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="SignIn"
                android:textColor="@color/colorAccent">

            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"></TextView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>