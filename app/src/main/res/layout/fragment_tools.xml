<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/text"
        ></TextView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/onlylogonottext"
        android:layout_below="@+id/text"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"></ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text=""
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/admin_username"
        android:hint="Username"
        android:textColorHint="@color/colorPrimaryDark"
        ></EditText>

        <EditText
            android:layout_below="@+id/admin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/admin_email"
            android:hint="Email"
            ></EditText>
        <EditText
        android:layout_below="@+id/admin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:id="@+id/admin_password"
        android:text=""
        android:inputType="textPassword"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        ></EditText>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@id/admin_email"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/loginbtn"
            android:text=""
            android:textColor="@color/colorAccent"></Button>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>